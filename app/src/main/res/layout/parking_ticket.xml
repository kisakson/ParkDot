<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:text="Attach Parking Ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/attach_parking_ticket_label"
        android:layout_gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <Button
            android:text="Take Photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/take_photo_button"
            android:layout_weight="2"/>

        <TextView
            android:text="OR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/or_label"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:textAlignment="center" />

        <Button
            android:text="Upload Picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/upload_picture_button"
            android:layout_weight="2"/>

    </LinearLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:srcCompat="@android:drawable/screen_background_dark_transparent"
        android:id="@+id/parking_ticket_img"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/ic_menu_gallery" />

    <CheckBox
        android:text="I do NOT have a parking ticket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/parking_ticket_checkbox"
        android:layout_gravity="center"/>

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/next_button2"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:onClick="onParkingTicketNextButtonClick" />

</LinearLayout>